# ===============================
# Server
# ===============================
PORT=3000
SERVER_URL=http://localhost:3000
CLIENT_URL=http://localhost:5173

# ===============================
# Database
# ===============================
DATABASE_URL=mongodb+srv://<DB_USERNAME>:<DB_PASSWORD>@<CLUSTER_NAME>/<DB_NAME>

# ===============================
# Auth / JWT
# ===============================
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=30d

# ===============================
# Payment (Stripe / SSLCommerz)
# ===============================
PAYMENT_SECRET_KEY=your_payment_secret_key
SSL_STORE_ID=your_ssl_store_id
SSL_STORE_PASS=your_ssl_store_password

# ===============================
# Nodemailer
# ===============================
NODEMAILER_EMAIL=your_email@gmail.com
NODEMAILER_EMAIL_PASS=your_email_app_password

# ===============================
# Optional / App Info
# ===============================
VITE_USERNAME=your_app_username
VITE_PASSWORD=your_app_password
