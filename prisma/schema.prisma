generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  email          String   @unique
  displayName    String
  photoURL       String
  badge          String
  creationTime   DateTime @default(now())
  lastSignInTime DateTime @default(now()) @updatedAt

  @@map("users")          // maps to MongoDB collection
}